app.post('/api/transactions/deposit', async (req, res) => {
  const { userId, amount, platform } = req.body;

  try {
    let client;

    // Platformga qarab mos client tanlanadi
    switch (platform) {
      case 'spinbetter':
        client = new PaymentAPIClient();
        break;
      case 'jvspinbet':
        client = new jvspinClient();
        break;
      case 'probet':
        client = new probetClient();
        break;
      default:
        return res.status(400).json({ success: false, message: 'Invalid platform' });
    }

    const response = await client.deposit(userId, amount);

    if (response.success) {
      const transaction = new Transaction({
        userId,
        type: 'deposit',
        platform,
        gameId: userId,
        cardNumber: '',
        expiryDate: '',
        amount,
        status: 'completed',
        operationId: response.operationId,
      });
      await transaction.save();
      res.json({ success: true, transaction });
    } else {
      res.status(400).json({ success: false, message: response.Message });
    }
  } catch (error) {
    console.error(error);
    res.status(500).send('Error processing deposit');
  }
});

// Payout route
app.post('/api/transactions/payout', async (req, res) => {
  const { userId, amount, platform } = req.body;

  try {
    let client;

    // Platformga qarab mos client tanlanadi
    switch (platform) {
      case 'spinbetter':
        client = new spinClient();
        break;
      case 'jvspinbet':
        client = new jvspinClient();
        break;
      case 'probet':
        client = new probetClient();
        break;
      default:
        return res.status(400).json({ success: false, message: 'Invalid platform' });
    }

    const response = await client.payout(userId, amount);

    if (response.success) {
      const transaction = new Transaction({
        userId,
        type: 'withdrawal',
        platform,
        gameId: userId,
        cardNumber: 'admin',
        expiryDate: '',
        amount,
        status: 'completed',
        operationId: response.operationId,
      });
      await transaction.save();
      res.json({ success: true, transaction });
    } else {
      res.status(400).json({ success: false, message: response.Message });
    }
  } catch (error) {
    console.error(error);
    res.status(500).send('Error processing payout');
  }
});


  